{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": [
    "standard"
  ],
  "globals": {
    "expect": "readonly",
    "it": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "curly": [
      "error",
      "all"
    ],
    "no-control-regex": "off",
    "no-shadow": "error",
    "no-unused-expressions": "off",
    "node/no-callback-literal": "off"
  }
}